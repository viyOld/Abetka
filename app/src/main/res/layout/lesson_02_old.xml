<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ua.com.smartsoft.viy.abetka.Lesson_02"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ua.com.smartsoft.viy.abetka.TextViewPlus
        xmlns:foo="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/lblTitle"
        android:id="@+id/lblTitle"
        android:textSize="@dimen/size_font_title"
        foo:customFont="fonts/Narbut_Abetka.ttf"/>



    <RelativeLayout
        android:id="@+id/layout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnGoNext"
            android:layout_centerInParent="true"
            android:layout_weight="80"
            android:id="@+id/btnGoNext"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_weight="10">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxHeight="50dp"
                android:src="@drawable/arrow_prev"
                android:background="@null"
                android:id="@+id/btnPrev"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="10">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arrow_next"
                android:background="@null"
                android:id="@+id/btnNext"
                android:scaleType="fitXY"/>
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/lblTitle"
        android:layout_above="@id/layout01"
        android:id="@+id/imageViewBig"

        android:src="@drawable/l3200" />

</RelativeLayout>
